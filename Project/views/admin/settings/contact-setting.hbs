<div class="container-fluid">
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="/admin">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Contact Settings</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <h4>Contact Page Settings</h4>
        </div>
        <div class="card-body">
            <form action="/admin/settings/contact-setting" method="POST">
                <!-- ===== TIÊU ĐỀ & MÔ TẢ ===== -->
                <div class="card mb-4">
                    <div class="card-header">
                        <strong>Page Content</strong>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label">Page Title</label>
                            <input
                                    type="text"
                                    name="contactTitle"
                                    class="form-control"
                                    value="{{setting.contactTitle}}"
                                    placeholder="Contact Us">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <textarea
                                    name="contactDescription"
                                    class="form-control"
                                    rows="3"
                                    placeholder="We’d love to hear from you!">{{setting.contactDescription}}</textarea>
                        </div>
                    </div>
                </div>
                <!-- ===== THÔNG TIN LIÊN HỆ ===== -->
                <div class="card mb-4">
                    <div class="card-header">
                        <strong>Contact Information</strong>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label">Address</label>
                            <input
                                    type="text"
                                    name="contactAddress"
                                    class="form-control"
                                    value="{{setting.contactAddress}}"
                                    placeholder="123 Fashion Street, District 1, HCM">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Phone</label>
                            <input
                                    type="text"
                                    name="contactPhone"
                                    class="form-control"
                                    value="{{setting.contactPhone}}"
                                    placeholder="+84 123 456 789">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input
                                    type="email"
                                    name="contactEmail"
                                    class="form-control"
                                    value="{{setting.contactEmail}}"
                                    placeholder="support@clothshop.com">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Working Hours</label>
                            <input
                                    type="text"
                                    name="contactWorkingHours"
                                    class="form-control"
                                    value="{{setting.contactWorkingHours}}"
                                    placeholder="Mon - Sat (9:00 AM - 8:00 PM)">
                        </div>
                    </div>
                </div>
                <!-- ===== BUTTON ===== -->
                <div class="text-end">
                    <button type="submit" class="btn btn-primary px-4">
                        Save Contact Settings
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
