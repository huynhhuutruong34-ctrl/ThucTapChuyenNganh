<div class="container-fluid py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10">

            <div class="card shadow-lg rounded-4 border-0">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h3>Edit Category</h3>
                </div>

                <div class="card-body p-4">

                    <form
                            action="/admin/category/edit/{{category._id}}?_method=PUT"
                            method="POST"
                            class="admin-form">

                        <div class="row g-4">

                            <div class="col-md-6">
                                <label class="form-label fw-bold">Name</label>
                                <input
                                        type="text"
                                        name="name"
                                        value="{{category.name}}"
                                        class="form-control admin-input"
                                        required>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold">Price</label>
                                <input
                                        type="number"
                                        name="price"
                                        value="{{category.price}}"
                                        class="form-control admin-input"
                                        required>
                            </div>

                            <div class="col-md-12">
                                <label class="form-label fw-bold">Image URL</label>
                                <input
                                        type="text"
                                        name="image"
                                        value="{{category.image}}"
                                        class="form-control admin-input"
                                        required>
                            </div>

                            <div class="col-md-12 text-center">
                                <img
                                        src="{{category.image}}"
                                        alt="{{category.name}}"
                                        class="img-preview">
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold">Status</label>
                                <select
                                        name="status"
                                        class="form-select admin-input">
                                    <option value="true" {{#if category.status}}selected{{/if}}>Active</option>
                                    <option value="false" {{#unless category.status}}selected{{/unless}}>Inactive</option>
                                </select>
                            </div>

                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary px-5 fw-bold">
                                Save
                            </button>
                            <a href="/admin/category" class="btn btn-secondary ms-2">
                                Cancel
                            </a>
                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>
