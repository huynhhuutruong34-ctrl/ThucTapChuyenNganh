<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Document</title>

    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Nunito', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #F9F9F9;
            color: #333;
        }

        header {
            background-color: #A8D5BA;
            padding: 20px 0;
            text-align: center;
            font-size: 1.8rem;
            font-weight: 600;
            color: white;
        }

        nav {
            background-color: #D7EAD9;
            padding: 10px 0;
            text-align: center;
        }

        nav a {
            margin: 0 15px;
            text-decoration: none;
            color: #333;
            font-weight: 600;
            transition: color 0.2s;
        }

        nav a:hover {
            color: #4C9F70;
        }

        .container {
            max-width: 1200px;
            margin: 30px auto;
            padding: 0 20px;
        }

        .welcome-section {
            text-align: center;
            margin-bottom: 40px;
            padding: 30px;
            background: linear-gradient(135deg, #4C9F70 0%, #A8D5BA 100%);
            border-radius: 15px;
            color: white;
        }

        .welcome-section h1 {
            margin: 0 0 10px 0;
            font-size: 2.5rem;
        }

        .welcome-section p {
            margin: 0;
            font-size: 1.1rem;
            opacity: 0.9;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 25px;
            margin-bottom: 40px;
        }

        .stat-card {
            background: white;
            padding: 25px;
            border-radius: 12px;
            box-shadow: 0 3px 12px rgba(0,0,0,0.08);
            text-align: center;
            transition: transform 0.3s ease;
            border-left: 4px solid #4C9F70;
        }

        .stat-card:hover {
            transform: translateY(-5px);
        }

        .stat-icon {
            font-size: 2.5rem;
            color: #4C9F70;
            margin-bottom: 15px;
        }

        .stat-number {
            font-size: 2rem;
            font-weight: bold;
            color: #333;
            margin: 10px 0;
        }

        .stat-label {
            color: #666;
            font-size: 0.9rem;
        }

        .features-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 25px;
            margin-bottom: 40px;
        }

        .feature-card {
            background: white;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 3px 12px rgba(0,0,0,0.08);
            transition: all 0.3s ease;
        }

        .feature-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 20px rgba(0,0,0,0.12);
        }

        .feature-icon {
            width: 60px;
            height: 60px;
            background: #4C9F70;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 20px;
            color: white;
            font-size: 1.5rem;
        }

        .feature-card h3 {
            color: #333;
            margin-bottom: 15px;
            font-size: 1.3rem;
        }

        .feature-card p {
            color: #666;
            line-height: 1.6;
            margin-bottom: 20px;
        }

        .feature-btn {
            background: #4C9F70;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 6px;
            cursor: pointer;
            transition: background 0.3s ease;
            font-weight: 600;
        }

        .feature-btn:hover {
            background: #3a7c55;
        }

        .recent-activity {
            background: white;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 3px 12px rgba(0,0,0,0.08);
            margin-bottom: 40px;
        }

        .recent-activity h2 {
            color: #333;
            margin-bottom: 25px;
            font-size: 1.5rem;
        }

        .activity-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .activity-item {
            display: flex;
            align-items: center;
            padding: 15px 0;
            border-bottom: 1px solid #e0e0e0;
        }

        .activity-item:last-child {
            border-bottom: none;
        }

        .activity-icon {
            width: 40px;
            height: 40px;
            background: #f0f7f2;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 15px;
            color: #4C9F70;
        }

        .activity-content {
            flex: 1;
        }

        .activity-title {
            font-weight: 600;
            color: #333;
            margin-bottom: 5px;
        }

        .activity-time {
            color: #999;
            font-size: 0.85rem;
        }

        .quick-actions {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 40px;
        }

        .action-btn {
            background: white;
            border: 2px solid #4C9F70;
            color: #4C9F70;
            padding: 20px;
            border-radius: 10px;
            cursor: pointer;
            transition: all 0.3s ease;
            font-weight: 600;
            font-size: 1rem;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

        .action-btn:hover {
            background: #4C9F70;
            color: white;
            transform: translateY(-2px);
        }

        footer {
            text-align: center;
            padding: 20px;
            font-size: 0.9rem;
            color: #999;
            margin-top: 40px;
            background-color: #D7EAD9;
        }

        .user-profile {
            display: flex;
            align-items: center;
            gap: 15px;
            margin-top: 20px;
            justify-content: center;
        }

        .user-avatar {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background: #4C9F70;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: bold;
            font-size: 1.2rem;
        }

        .user-info h3 {
            margin: 0;
            color: white;
            font-size: 1.1rem;
        }

        .user-info p {
            margin: 0;
            opacity: 0.8;
            font-size: 0.9rem;
        }

        @media (max-width: 768px) {
            .stats-grid {
                grid-template-columns: 1fr;
            }

            .features-grid {
                grid-template-columns: 1fr;
            }

            .quick-actions {
                grid-template-columns: 1fr;
            }

            .welcome-section h1 {
                font-size: 2rem;
            }
        }
    </style>
</head>
<body>
<nav>
    <a href="/" style="color: #4C9F70;">Trang chủ</a>
    <a href="/product">Sản phẩm</a>
    <a href="/orders">Đơn hàng</a>
    <a href="/customers">Khách hàng</a>
    <a href="/reports">Báo cáo</a>
    <a href="/login">Đăng xuất</a>
</nav>
{{{body}}}

<script>
    // Cập nhật thời gian thực cho các hoạt động
    function updateActivityTimes() {
        const timeElements = document.querySelectorAll('.activity-time');
        const times = ['5 phút trước', '1 giờ trước', '2 giờ trước', '4 giờ trước'];

        timeElements.forEach((element, index) => {
            element.textContent = times[index];
        });
    }

    // Xử lý sự kiện cho các nút hành động
    document.querySelectorAll('.action-btn').forEach(button => {
        button.addEventListener('click', function() {
            const actions = {
                0: 'Thêm sản phẩm mới',
                1: 'Tạo đơn hàng mới',
                2: 'Xem báo cáo chi tiết',
                3: 'Mở cài đặt hệ thống'
            };
            const index = Array.from(this.parentElement.children).indexOf(this);
            alert(`Bạn đã chọn: ${actions[index]}`);
        });
    });

    // Xử lý sự kiện cho các nút tính năng
    document.querySelectorAll('.feature-btn').forEach(button => {
        button.addEventListener('click', function() {
            const features = {
                0: 'Quản lý Sản phẩm',
                1: 'Quản lý Đơn hàng',
                2: 'Quản lý Khách hàng'
            };
            const index = Array.from(this.parentElement.parentElement.parentElement.children).indexOf(this.parentElement.parentElement);
            alert(`Chuyển đến trang: ${features[index]}`);
        });
    });

    // Khởi tạo
    document.addEventListener('DOMContentLoaded', function() {
        updateActivityTimes();

        // Cập nhật thời gian mỗi phút
        setInterval(updateActivityTimes, 60000);
    });
</script>
</body>
</html>