<link rel="stylesheet" href="/css/style.css">

<div class="cart-page">

    <!-- CART LIST -->
    <div class="cart-container">
        <h2 class="cart-title">Giỏ hàng của bạn</h2>
        <div id="cart-list"></div>
        <div class="cart-summary-box">
            <span>Tổng cộng:</span>
            <span id="cart-total">0₫</span>
        </div>
    </div>

    <!-- ORDER INFO -->
    <div class="checkout-container">
        <h3>Thông tin đặt hàng</h3>

        <div class="checkout-form">
            <input type="text" placeholder="Họ và tên" required>
            <input type="text" placeholder="Số điện thoại" required>
            <input type="text" placeholder="Địa chỉ giao hàng" required>

            <select>
                <option selected disabled>Phương thức thanh toán</option>
                <option>Thanh toán khi nhận hàng (COD)</option>
                <option>Chuyển khoản ngân hàng</option>
            </select>
        </div>

        <button class="btn-order" id="btn-order">Đặt hàng</button>
        <button class="btn-back" onclick="window.location.href='/shop'">← Quay lại shop</button>
    </div>

</div>

<script>
    const cartList = document.getElementById("cart-list");
    const btnOrder = document.getElementById("btn-order");
    const cartTotal = document.getElementById("cart-total");

    let cart = JSON.parse(localStorage.getItem('cart')) || [];

    function saveCart() {
        localStorage.setItem('cart', JSON.stringify(cart));
    }

    function renderCart() {
        if (cart.length === 0) {
            cartList.innerHTML = "<p class='empty-cart'>Giỏ hàng đang trống.</p>";
            cartTotal.innerText = "0₫";
            return;
        }

        cartList.innerHTML = "";
        let totalAll = 0;

        cart.forEach((item, index) => {
            const totalPrice = item.price * item.qty;
            totalAll += totalPrice;

            cartList.innerHTML += `
                <div class="cart-item">
                    <img src="${item.img}" alt="${item.name}">
                    <div class="cart-info">
                        <h4>${item.name}</h4>
                        <p>Giá: ${Number(item.price).toLocaleString()}₫</p>
                        <div class="quantity-control">
                            <button class="decrease" data-index="${index}">-</button>
                            <span>${item.qty}</span>
                            <button class="increase" data-index="${index}">+</button>
                        </div>
                    </div>
                    <div class="cart-right">
                        <p class="cart-item-total">Tổng: ${totalPrice.toLocaleString()}₫</p>
                        <button class="btn-delete" data-index="${index}">Xóa</button>
                    </div>
                </div>
            `;
        });

        cartTotal.innerText = totalAll.toLocaleString() + "₫";
        attachEvents();
    }

    function attachEvents() {
        document.querySelectorAll('.btn-delete').forEach(btn => {
            btn.onclick = () => {
                cart.splice(btn.dataset.index, 1);
                saveCart();
                renderCart();
            };
        });

        document.querySelectorAll('.increase').forEach(btn => {
            btn.onclick = () => {
                cart[btn.dataset.index].qty++;
                saveCart();
                renderCart();
            };
        });

        document.querySelectorAll('.decrease').forEach(btn => {
            btn.onclick = () => {
                if (cart[btn.dataset.index].qty > 1) {
                    cart[btn.dataset.index].qty--;
                    saveCart();
                    renderCart();
                }
            };
        });
    }

    btnOrder.onclick = async () => {
        if(cart.length === 0){
            alert("Giỏ hàng đang trống!");
            return;
        }

        const customer = {
            name: document.querySelector('input[placeholder="Họ và tên"]').value.trim(),
            phone: document.querySelector('input[placeholder="Số điện thoại"]').value.trim(),
            address: document.querySelector('input[placeholder="Địa chỉ giao hàng"]').value.trim(),
            payment: document.querySelector('select').value
        };

        if(!customer.name || !customer.phone || !customer.address || customer.payment.includes("Phương thức")){
            alert("Vui lòng nhập đầy đủ thông tin");
            return;
        }

        const response = await fetch('/order', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ customer, items: cart })
        });

        const data = await response.json();

        if(data.success){
            // Xóa cart localStorage
            localStorage.removeItem('cart');
            window.location.href = `/bill/${data.orderId}`; // chuyển sang hóa đơn
        } else {
            alert("Lỗi đặt hàng: " + data.error);
        }
    };


    renderCart();
</script>
